    }
</style>

<script>
    import { changeTheme } from "../util";
    const themeToggle = document.getElementById(
        "theme-toggle"
    ) as HTMLButtonElement;

    themeToggle.addEventListener("click", e => {
        const isDark = changeTheme();
        localStorage.setItem("theme", isDark ? "dark" : "light");
        console.log("Switched theme to", isDark ? "dark" : "light");

        // do not blur if this press was keyboard triggered
        if (e instanceof PointerEvent && e.pointerType) themeToggle.blur();
    });
</script>
